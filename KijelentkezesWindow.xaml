<Window x:Class="Orai0317.KijelentkezesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orai0317"
        mc:Ignorable="d"
        Title="FelvetelWindow" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Név *"/>
            <TextBox x:Name="tbxNev" />

            <Label Content="Faj *"/>
            <TextBox x:Name="tbxFaj" />

            <Label Content="Fajta *"/>
            <TextBox x:Name="tbxFajta" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Kijeletkez" Margin="10" Click="KijelentkezesClick"/>
                <Button Content="Mégsem" Margin="10" Click="MegseClick"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
